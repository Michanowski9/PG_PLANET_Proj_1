<Window x:Class="PLANET_Proj_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLANET_Proj_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>X:</Label>
            <TextBox x:Name="InputSizeX" Width="50" Margin="10,0,0,0"/>
            <Label Margin="10,0,0,0">Y:</Label>
            <TextBox x:Name="InputSizeY" Width="50" Margin="10,0,0,0"></TextBox>
            <Button x:Name="CreateArena" Margin="10,0,0,0" Click="CreateArena_Click">Create Area</Button>
            <Button x:Name="Start" Margin="10,0,0,0" Click="Start_Click" IsEnabled="False">Start</Button>
            <Button x:Name="Stop" Margin="10,0,0,0" Click="Stop_Click" IsEnabled="False">Stop</Button>
            <Button x:Name="PrevFrame" Margin="10,0,0,0" Click="PrevFrame_Click" IsEnabled="False">PrevFrame</Button>
            <Button x:Name="NextFrame" Margin="10,0,0,0" Click="NextFrame_Click" IsEnabled="False">Next Frame</Button>
        </StackPanel>
        <Canvas MouseLeftButtonDown="arena_MouseLeftButtonDown" x:Name="Arena" Margin="0,30,0,0"></Canvas>
    </StackPanel>
</Window>
